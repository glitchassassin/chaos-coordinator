{
  "name": "chaos-coordinator",
  "version": "0.1.0",
  "description": "Flow-state manager for developers context-switching across multiple projects",
  "main": "./out/main/index.js",
  "author": "Jon",
  "license": "MIT",
  "private": true,
  "scripts": {
    "predev": "npx electron-rebuild -f -w better-sqlite3",
    "dev": "electron-vite dev -- --remote-debugging-port=9222",
    "build": "electron-vite build && electron-builder --mac",
    "pretest": "npm rebuild better-sqlite3",
    "test": "vitest run",
    "pretest:watch": "npm rebuild better-sqlite3",
    "test:watch": "vitest",
    "pretest:coverage": "npm rebuild better-sqlite3",
    "test:coverage": "vitest run --coverage",
    "pretest:e2e": "npx electron-rebuild -f -w better-sqlite3",
    "test:e2e": "playwright test",
    "lint": "eslint . && tsc --noEmit -p tsconfig.node.json && tsc --noEmit -p tsconfig.web.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "rebuild:electron": "electron-builder install-app-deps",
    "prepare": "husky"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.29",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "ai": "^6.0.86",
    "better-sqlite3": "^11.8.1",
    "drizzle-orm": "^0.38.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.0.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.12.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.5",
    "drizzle-kit": "^0.30.4",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^5.0.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "playwright": "^1.50.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "vitest": "^3.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,html}": [
      "prettier --write"
    ]
  }
}
